{
    "compilerOptions": {
        "module": "NodeNext",
        // "moduleResolution": "node",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "esModuleInterop": true,
        // "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}